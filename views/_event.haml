#events.vevent
  %h4 Upcoming events
  %p.title
    - url = @event[:ticket_url].empty? ? "http://upcoming.yahoo.com/event/#{@event[:id]}/" : @event[:ticket_url]
    %a{:href => url, :rel => "external", :class => "url summary"} 
      = "#{@event[:name]}"
  %p.description
    = @event[:description]
  %p.location
    #{@event[:venue_city]}, #{@event[:venue_country_name]}